<div class="container chatroom">
  <h1>#<%= @group.title %></h1>

  <div class="messages">
    <% @group.messages.each do |message| %>
      <div id="message-<%= message.id %>">
        <small>
          <strong><%= "#{message.user.first_name} #{message.user.last_name}" %></strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>

  <%= simple_form_for [@group, @message],
    html: {class: "d-flex"} do |f|
  %>
    <%= f.input :content,
      label: false,
      placeholder: "Message ##{@group.title}",
      wrapper_html: {class: "flex-grow-1"}
    %>
    <%= f.submit "Send", class: "btn btn-primary mb-3" %>
  <% end %>
</div>









<ul>
  <li>Owner: <%= @group.user.full_name %></li>
  <% @group.contact_ids.each do |id| %>
    <li><%= User.find(id).full_name %></li>
    <% end %>
</ul>

<%= link_to "Edit",  edit_group_path, class: "btn btn-primary" %>
