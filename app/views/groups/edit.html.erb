<div class="container row justify-content-center">
  <div style="width: 60rem; height: 100vh ">
    <h1 class= "my-4">Editing a Group</h1>
    <%= simple_form_for @group do |f| %>
      <%= f.input :title %>
      <%= f.input :contact_ids, collection: @connections, label_method: :full_name, input_html: { multiple: true, data: { controller: "tom-select" } }  %>
      <div class= "d-flex justify-content-center gap-3">
        <%= f.button :submit, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
