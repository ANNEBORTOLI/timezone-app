<div class="global" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1636955816868-fcb881e57954?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1770&q=80);">
  <div class="card">
    <div class="photo">
      <%= image_tag "#{@contact.image}", class: "contact-photo", alt: "Your profile photo" %>
    </div>
    <div class="banner"style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1546525506-495a7647977b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1770&q=80);"></div>
      <div class="personal justify-center">
          <ul>
            <li><strong><%= "#{@contact.first_name} #{@contact.last_name}" %></strong></li>
            <li> <strong>Email:</strong> <%= @contact.email%></li>
            <li><strong>Timezone:</strong> <%= @contact.timezone %></li>
            <li style="color: #fff;">-</li>
            <li>Available hours in <span><%= current_user.timezone %></span>:</li>
            <li style="color: #fff; background: #DC3545">
              <%= @contact.working_hour_start %>:00 | <%= @contact.working_hour_end %>:00
            </li>
          </ul>
      </div>
    <div class="social-media-banner justify-center">
      <a href="https://twitter.com/"  target="_blank"><i class="fa-brands fa-square-twitter"></i></a>
      <a href="https://pt-br.facebook.com/"  target="_blank"><i class="fa-brands fa-square-facebook"></i></a>
      <a href="https://www.instagram.com/"  target="_blank"><i class="fa-brands fa-square-instagram"></i></a>
      <a href="https://www.linkedin.com/"  target="_blank"><i class="fa-brands fa-linkedin"></i></a>
    </div>
  </div>
</div>
