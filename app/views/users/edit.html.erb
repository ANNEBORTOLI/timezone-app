<h1>Edit profile</h1>

<div class="container row justify-content-center">
  <div style="width: 60rem; height: 100vh ">
    <h1 class= "my-4">Updating User profile</h1>
    <%= simple_form_for @user do |f| %>
      <%= f.input :address %>
      <%= f.input :working_hour_start %>
      <%= f.input :working_hour_end %>
        <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
 </div>
